{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "DB": ""
  },
  "jwtSettings": {
    "issuer": "http://localhost:5247/", // Provider
    "audience": "http://localhost:3000/", // url Consumer (example : angular )
    "secret": "",
    "validateAudience": true,
    "validateIssuer": true,
    "validateLifetime": true,
    "validateIssuerSigningKey": true,
    "TokenExpireDate": 1,
    "RefreshTokenExpireDate": 60
  },
  "emailSettings": {
    "port": "",
    "host": "",
    "fromEmail": "",
    "password": ""

  },
  "Serilog": {
    "Using": [ "Serilog.Sinks.Console" ],
    "MinimumLevel": { "Default": "Information" },
    "WriteTo": [
      { "Name": "Console" }
    ]
  }
